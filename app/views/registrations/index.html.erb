<h1>Listing registrations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Address line 1</th>
    <th>Address line 2</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Country</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Co driver</th>
    <th>Sup single room</th>
    <th>Sup junior suite</th>
    <th>Sup exceptional car</th>
    <th>Sup own car</th>
    <th>Sup tshirt</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.name %></td>
    <td><%= registration.company %></td>
    <td><%= registration.address_line_1 %></td>
    <td><%= registration.address_line_2 %></td>
    <td><%= registration.city %></td>
    <td><%= registration.postcode %></td>
    <td><%= registration.country %></td>
    <td><%= registration.telephone %></td>
    <td><%= registration.email %></td>
    <td><%= registration.co_driver %></td>
    <td><%= registration.sup_single_room %></td>
    <td><%= registration.sup_junior_suite %></td>
    <td><%= registration.sup_exceptional_car %></td>
    <td><%= registration.sup_own_car %></td>
    <td><%= registration.sup_tshirt %></td>
    <td><%= registration.comments %></td>
    <td><%= link_to 'Show', registration %></td>
    <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
    <td><%= link_to 'Destroy', registration, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

