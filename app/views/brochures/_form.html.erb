<%= simple_form_for(@brochure) do |f| %>
  <%= f.error_notification %>

<fieldset>
  <div class="clearfix">
    <h2>Advert Requirements</h2>
    <p>Advertising will be available in the route book which is distributed to all participants of the rally. Please tick as appropriate</p>
  </div>
  <div class="clearfix">
    <div class="input">
      <%= f.input :advert, :collection => [
        ['Half Page', ' Half Page (£250)'],
        ['Full Page', ' Full Page (£500)'],
        ['Silver Page', ' Silver Page (£1000)'],
        ['Gold Page', ' Gold Page (£1500)'],
        ['Diamond Page', ' Diamond Page (£2500)'],
        ['Platinum Page', ' Platinum Page (£5000)'],
        ['Inside Back/Front Cover', ' Inside Back/Front Cover (£7500)'],
        ['Patron Page', ' Patron Page (£1000)']
      ], :as => :radio, :item_wrapper_tag => :li, :collection_wrapper_tag => :ul, :label_method => :last, :value_method => :first, :wrapper_html => { :class => "inputs-list" } %>
      <p>Further sponsorship opportunities available upon request</p>
    </div>

  </div>
  <div class="clearfix">
    <h2>Personal Details</h2>
  </div>
  <div class="clearfix"><%= f.input :name %></div>
  <div class="clearfix"><%= f.input :company %></div>
  <div class="clearfix"><%= f.input :address_line_1 %></div>
  <div class="clearfix"><%= f.input :address_line_2 %></div>
  <div class="clearfix"><%= f.input :postcode %></div>
  <div class="clearfix"><%= f.input :telephone %></div>
  <div class="clearfix"><%= f.input :email %></div>
  <div class="clearfix">
    <h2>Payment Details</h2>
    <p>Please select your preferred method of payment</p>
  </div>
  <div class="clearfix"><%= f.input :amount, :label => "Total Amount:", :input_html => {:class => "small"} %></div>
  <div class="clearfix">
    <div class="input">
      <%= f.input :payment, :collection => [['Cheque', ' I enclose a cheque payable to '], ['CreditCard', ' I want to pay by Credit Card (please contact us on 020 8371 9080)'], ['Invoice', ' I require an invoice'], ['Receipt', ' I require a charity receipt'], ['BACS', ' I will make a BACS payment']], :as => :radio, :item_wrapper_tag => :li, :collection_wrapper_tag => :ul, :label_method => :last, :value_method => :first, :wrapper_html => { :class => "inputs-list" } %>
      <span class="lbl long"><div class="card strong"><h4>UK Bank Details</h4><dl><dt>Account Name</dt><dd>Chana Charitable Trust</dd><dt>Bank:</dt><dd>Unity Trust Bank</dd><dt>Sort Code:</dt><dd>08-60-01</dd><dt>Account Number:</dt><dd>20262640</dd><dt>Swift Code:</dt><dd>CPBKGB22</dd><dt>IBAN Number:</dt><dd>GB11 CPBK 0800 5150 073210</dd><dt>Ref:</dt><dd>Please provide your name</dd></dl>
      <h4>US Bank Details</h4>
      <dl><dt>Bank:</dt><dd>Astoria Federal Savings</dd><dt>Account Number:</dt><dd>8311013630</dd><dt>Swift Code:</dt><dd>221472815</dd><dt>Friends of Chana Uk Inc.</dt><dt>TAX-ID No:</dt><dd>46-458-4506</dd><dt>C/O Judith Weiss, 1671 East 29th, Brooklyn NY 11229</dt></dl>
      </div></span>
    </div>
  </div>
  <div class="clearfix">
    <h2>Advertising Copy</h2>
    <p>Please write your message in the box below.</p>
  </div>
  <div class="clearfix">
    <%= f.input :advertising_copy %>
    <span class="help-block offset2">Alternatively, please supply high resolution, print optimised PDF (with fonts converted to outlines or embedded /images in 300dpi) or 300dpi JPEG to <a href="mailto:desi@jam-events.com">desi@jam-events.com</a>. Please request a size guide.</span>
  </div>

  <div class="clearfix">
    <div class="input button">
      <%= f.button :submit, :class => "btn large", :value => "Submit Order Form" %>
    </div>
  </div>

  <div class="alert-message block-message warning contactme">
    <p>Kindly return this form by 1<sup>st</sup> April 2015 to:</p>
    <p>Chana Charitable Trust c/o Jam Events, 314 Regents Park Road, London N3 2JX Tel: 020 8371 9080 Fax: 020 8346 1036</p>
  </div>
<% end %>

<script>

$(function(){
  $('label[for="brochure_payment_cheque"]').html(' I will send a cheque payable to <span class="lbl long"><br>Chana Charitable Trust c/o Jam Events,<br>314 Regents Park Road,<br>London,<br>N3 2JX<br>(Chana Charitable Trust Registered UK Charity Number 1070196)</span>');
  $('label[for="brochure_payment"]').hide();
  $('label[for="brochure_advert"]').hide();
});
</script>